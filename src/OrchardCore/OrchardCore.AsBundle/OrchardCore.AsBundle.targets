<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <DotnetWatchList>obj/$(MSBuildProjectFile).dotnetwatch.txt</DotnetWatchList>
  </PropertyGroup>

  <!--
    Defines msbuild tasks on a Bundle package to copy all extensions assets to the project folder.
  -->

  <Target Name="CopyPackageAssets" AfterTargets="Build" Condition="'$(IgnorePackageAssets)' != 'true'">
    <Message Text="Copying package assets" Importance="high" />
    <Copy
      SourceFiles="@(PackageAssetFiles)"
      DestinationFolder="Packages\%(RecursiveDir)"
      ContinueOnError="true" />

    <ItemGroup Condition="'@(_MSBuildProjectReferenceExistent)' != ''">
      <PackageProjectReferences
        Include="@(_MSBuildProjectReferenceExistent)"
        Condition="Exists('%(RootDir)%(Directory)Module.txt') Or Exists('%(RootDir)%(Directory)Theme.txt')" />
    </ItemGroup>

    <MSBuild
      Targets="CopyPackageAssetFiles"
      BuildInParallel="$(BuildInParallel)"
      Properties="ApplicationDirectory=$(MSBuildProjectDirectory)"
      Projects="@(PackageProjectReferences)"
      Condition="'@(PackageProjectReferences)' != ''"
      ContinueOnError="true">
    </MSBuild>

    <Message Text="Generating watch file: $(MSBuildProjectName)" Importance="high" />
    <WriteLinesToFile
      File="$(DotnetWatchList)"
      Lines="@(PackageProjectReferences)"
      Condition="'@(PackageProjectReferences)' != ''"
      Overwrite="true"
      Encoding="Unicode"
      ContinueOnError="true" />

    <CreateItem Include="@(Content)" Condition="'%(Extension)'=='.cshtml'">
      <Output TaskParameter="Include" ItemName="MvcContentRazorFiles"/>
    </CreateItem>
    <ItemGroup Condition="'@(MvcRazorFilesToCompile)' == ''">
      <MvcRazorFilesToCompile Include="@(MvcContentRazorFiles);Packages\**\*.cshtml" />
    </ItemGroup>
  </Target>

  <Target Name="CleanPackageAssets" AfterTargets="Clean"
          Condition="'$(IgnorePackageAssets)' != 'true' And Exists('Packages')">
    <ItemGroup>
     <AllPackageAssetFiles Include="Packages\**" />
    </ItemGroup>
    <Delete
      Files="@(AllPackageAssetFiles)"
      ContinueOnError="true" />
    <RemoveDir
      Directories="Packages\%(AllPackageAssetFiles.RecursiveDir)"
      ContinueOnError="true" />
  </Target>

  <Target Name="ClearProjectReferences" BeforeTargets="_CollectWatchProjects"
          Condition="'$(WatchOnlyPackageRazorFiles)' == 'true'">
    <ItemGroup>
      <ProjectReference Remove="@(ProjectReference)" />
    </ItemGroup>
  </Target>

  <Target Name="WatchPackageRazorFiles" BeforeTargets="_WriteGeneratedWatchList"
          Condition="'$(WatchOnlyPackageRazorFiles)' == 'true' And Exists('$(DotnetWatchList)')">
    <ReadLinesFromFile File="$(DotnetWatchList)">
      <Output TaskParameter="Lines" ItemName="ProjectsToWatch" />
    </ReadLinesFromFile>
    <ItemGroup>
      <Watch Include="%(ProjectsToWatch.RootDir)%(Directory)**\*.cshtml" />
    </ItemGroup>
  </Target>

  <Target Name="CopyPackageRazorFiles"
          Condition="'$(WatchOnlyPackageRazorFiles)' == 'true' And Exists('$(DotnetWatchList)')">
    <ReadLinesFromFile File="$(DotnetWatchList)">
      <Output TaskParameter="Lines" ItemName="ProjectsToWatch" />
    </ReadLinesFromFile>
    <ItemGroup>
      <PackageRazorFiles Include="%(ProjectsToWatch.RootDir)%(Directory)**\*.cshtml">
        <ProjectName>%(Filename)</ProjectName>
      </PackageRazorFiles>
    </ItemGroup>
    <Message Text="Copying package razor files: $(MSBuildProjectName)" Importance="high" />
    <Copy
      SourceFiles="@(PackageRazorFiles)"
      DestinationFolder="Packages\%(ProjectName)\%(RecursiveDir)" />
  </Target>

  <!--
    Defines msbuild props and items on a Bundle package to publish all extensions assets (local and packages).
  -->

  <PropertyGroup>
    <MvcRazorExcludeViewFilesFromPublish>false</MvcRazorExcludeViewFilesFromPublish>
  </PropertyGroup>

  <ItemGroup Condition="Exists('App_Data\Sites')">
    <Compile Remove="App_Data\**" />
    <Content Remove="App_Data\**" />
    <EmbeddedResource Remove="App_Data\**" />
    <None Remove="App_Data\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Packages\**" />
    <Content Remove="Packages\**" />
    <EmbeddedResource Remove="Packages\**" />
    <None Remove="Packages\**" />
  </ItemGroup>

  <ItemGroup Condition="Exists('App_Data\Sites')">
    <ResolvedFileToPublish Include="App_Data\**" Exclude="App_Data\**\*.log">
      <RelativePath>App_Data\%(RecursiveDir)%(Filename)%(Extension)</RelativePath>
    </ResolvedFileToPublish>
  </ItemGroup>

  <ItemGroup>
    <ResolvedFileToPublish Include="Packages\**">
      <RelativePath>Packages\%(RecursiveDir)%(Filename)%(Extension)</RelativePath>
    </ResolvedFileToPublish>
  </ItemGroup>

</Project>