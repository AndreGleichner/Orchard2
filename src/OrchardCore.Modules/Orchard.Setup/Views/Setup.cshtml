@using Orchard.Setup.ViewModels 
@using System.Linq
@using Orchard.Setup.Controllers
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Html
@using System.IO;
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer T
@inject Microsoft.Extensions.Options.IOptions<IdentityOptions> identityOptions
@model dynamic

@functions{
    void AddPrefixToModelState(string prefix) {
        var originalModelState = ViewData.ModelState.ToList();
        ViewData.ModelState.Clear();
        foreach (var keyValuePair in originalModelState)
        {
            foreach (var error in keyValuePair.Value.Errors)
            {
                ViewData.ModelState.AddModelError(string.IsNullOrWhiteSpace(keyValuePair.Key) ? keyValuePair.Key : prefix+"."+keyValuePair.Key, error.ErrorMessage);
            }
        }
    }
}
@{
    var setupViewModel = Model.SetupViewModel as SetupViewModel;
    AddPrefixToModelState(nameof(SetupViewModel));

    var defaultRecipe = setupViewModel.Recipes.FirstOrDefault(x => x.Name == setupViewModel.RecipeName) ?? setupViewModel.Recipes.First();
    var options = identityOptions.Value;
    var passwordOptions = new HtmlContentBuilder();
    IHtmlContent separator = HtmlString.Empty;

    if (options.Password.RequireNonAlphanumeric)
    {
        passwordOptions.AppendHtml(separator).AppendHtml(T["one non-alphanumeric"]);
        separator = T[", "];
    }

    if (options.Password.RequireUppercase)
    {
        passwordOptions.AppendHtml(separator).AppendHtml(T["one uppercase"]);
        separator = T[", "];
    }

    if (options.Password.RequireLowercase)
    {
        passwordOptions.AppendHtml(separator).AppendHtml(T["one lowercase"]);
        separator = T[", "];
    }

    if (options.Password.RequireDigit)
    {
        passwordOptions.AppendHtml(separator).AppendHtml(T["one digit"]);
        separator = T[", "];
    }

    if (separator != HtmlString.Empty)
    {
        separator = T[" and "];
    }

    passwordOptions.AppendHtml(separator).AppendHtml(T["{0} characters in total", options.Password.RequiredLength]);

    var passwordTooltip = T["Password must have at least {0}.", passwordOptions];
}

<form asp-action="Index">

    <div class="jumbotron">
        <h1>@T["SETUP"]</h1>
        <p class="lead">@T["Please answer a few questions to configure your site."]</p>
    </div>

    <div class="row">
        <fieldset class="form-group col-md-6" asp-validation-class-for="@setupViewModel.SiteName">
            <div>
                <label asp-for="@setupViewModel.SiteName">@T["What is the name of your site?"]</label>
                <input asp-for="@setupViewModel.SiteName" class="form-control" autofocus />
                <span asp-validation-for="@setupViewModel.SiteName" class="text-danger">@T["The site name is required."]</span>
                <span class="text-muted form-text small">@T["This is used as the default title of your pages."]</span>
            </div>
        </fieldset>
        <fieldset class="form-group col-md-6">
            <input type="hidden" asp-for="@setupViewModel.RecipeName" />
            <nav>
                <div asp-validation-class-for="@setupViewModel.RecipeName">
                    <label asp-for="@setupViewModel.SiteName">@T["Recipe"]</label>
                    <div id="recipes" class="dropdown">
                        <button id="recipeButton" title="@defaultRecipe.Description" class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @defaultRecipe.DisplayName
                        </button>
                        <div class="dropdown-menu">
                            @foreach (var recipe in setupViewModel.Recipes.OrderBy(x => x.Name))
                            {
                                <a href="#" data-recipe-name="@recipe.Name" data-recipe-description="@recipe.Description" data-recipe-display-name="@recipe.DisplayName" class="dropdown-item">@recipe.DisplayName <span class="text-muted form-text small">@recipe.Description</span></a>
                            }
                        </div>
                    </div>
                    <span class="text-muted form-text small">@T["Recipes allow you to setup your site with additional pre-configured options, features and settings out of the box."]</span>

                </div>
            </nav>
        </fieldset>
    </div>
    @if (!setupViewModel.TablePrefixPreset || !setupViewModel.ConnectionStringPreset || !setupViewModel.DatabaseProviderPreset)
    {
    <h6>
        @T["Database"]
        <span class="text-muted form-text small">@T["The database is used to store the site's configuration and its contents. You can specify a custom table prefix if you intend to reuse the same database for multiple sites."]</span>
    </h6>
    }
    <div class="row">
        @if (setupViewModel.DatabaseProviderPreset)
    {
            <input asp-for="@setupViewModel.DatabaseProvider" type="hidden" />
            <span asp-validation-for="@setupViewModel.DatabaseProvider" class="text-danger"></span>
        }
        else
        {
        <div class="form-group col-md-6">
            <label asp-for="@setupViewModel.DatabaseProvider">@T["What type of database to use?"]</label>
            <select asp-for="@setupViewModel.DatabaseProvider" class="form-control">
                @foreach (var provider in setupViewModel.DatabaseProviders)
    {
                <option value="@provider.Value" data-connection-string="@provider.HasConnectionString">@provider.Name</option>
                }
            </select>
            <span asp-validation-for="@setupViewModel.DatabaseProvider" class="text-danger"></span>
        </div>
        }

        @if (setupViewModel.TablePrefixPreset)
    {
            <input asp-for="@setupViewModel.TablePrefix" type="hidden" />
        }
        else
        {
        <div class="form-group col-md-6" asp-validation-class-for="@setupViewModel.TablePrefix">
            <label asp-for="@setupViewModel.TablePrefix">@T["Table Prefix"]</label>
            <input asp-for="@setupViewModel.TablePrefix" class="form-control" />
            <span asp-validation-for="@setupViewModel.TablePrefix" class="text-danger"></span>
        </div>
        }
    </div>

    @if (setupViewModel.ConnectionStringPreset)
    {
        <input asp-for="@setupViewModel.ConnectionString" type="hidden" />
    }
    else
    {
    <fieldset class="row connectionString" asp-validation-class-for="@setupViewModel.ConnectionString">
        <div class="form-group col-md-12">
            <label asp-for="@setupViewModel.ConnectionString">@T["Connection string"]</label>
            <input asp-for="@setupViewModel.ConnectionString" class="form-control" />
            <span asp-validation-for="@setupViewModel.ConnectionString" class="text-danger"></span>
            <span class="text-muted form-text small">@T["The connection string to your database instance. e.g., Data Source=<em>localhost</em>;Initial Catalog=<em>Orchard</em>;User Id=<em>userid</em>;Password=<em>password</em>"]</span>
        </div>
    </fieldset>
    }
    <h6>
        @T["Super User"]
        <span class="text-muted form-text small">@T["The super user has all the rights. It should be used only during Setup and for disaster recovery."]</span>
    </h6>
    <div class="row">
        <div class="form-group col-md-6" asp-validation-class-for="@setupViewModel.UserName">
            <label asp-for="@setupViewModel.UserName">@T["User name"]</label>
            <input asp-for="@setupViewModel.UserName" class="form-control" />
            <span asp-validation-for="@setupViewModel.UserName" class="text-danger">@T["The user name is required."]</span>
        </div>
        <div class="form-group col-md-6" asp-validation-class-for="@setupViewModel.Email">
            <label for="Email">@T["Email"]</label>
            <input asp-for="@setupViewModel.Email" class="form-control" type="email"/>
            <span asp-validation-for="@setupViewModel.Email" class="text-danger">@T["The email is invalid."]</span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6" asp-validation-class-for="@setupViewModel.Password">
            <label asp-for="@setupViewModel.Password">@T["Password"]</label>
            <input asp-for="@setupViewModel.Password" type="password" class="form-control" data-toggle="popover" data-placement="top" data-trigger="focus" title="@T["Password strength"]" data-content="@passwordTooltip" />
            <div id="passwordStrength"></div>
            <span asp-validation-for="@setupViewModel.Password" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6" asp-validation-class-for="@setupViewModel.PasswordConfirmation">
            <label asp-for="@setupViewModel.PasswordConfirmation">@T["Password Confirmation"]</label>
            <input asp-for="@setupViewModel.PasswordConfirmation" type="password" class="form-control" />
            <span asp-validation-for="@setupViewModel.PasswordConfirmation" class="text-danger"></span>
        </div>
    </div>
    <fieldset>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">@T["Finish Setup"]</button>
        </div>
    </fieldset>
</form>

    
<script src="/Orchard.Setup/Scripts/setup.min.js" type="text/javascript"></script>
<script type="text/javascript">
    //<![CDATA[
    $(function(){
        $('#Password').strength({
        minLength: @(options.Password.RequiredLength),
            upperCase: @(options.Password.RequireUppercase ? "true" : "false"),
            lowerCase: @(options.Password.RequireLowercase ? "true" : "false"),
            numbers: @(options.Password.RequireDigit ? "true" : "false"),
            specialchars: @(options.Password.RequireNonAlphanumeric ? "true" : "false"),
            target: '#passwordStrength',
            style: "margin-top: 7px; height: 7px; border-radius: 5px"
        });
        $('#Password').popover({
        trigger: 'focus'
        })
    })
    //]]>
</script>